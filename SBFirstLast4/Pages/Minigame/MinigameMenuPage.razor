@page "/minigame"
@namespace SBFirstLast4.Pages

<PageTitle>@AppTitle.Format("ミニゲーム")</PageTitle>
<link rel="stylesheet" href="css/fonts.css" />

<div class="minigame-header">
	ミニゲーム
</div>
<div class="container">
	<div class="card-deck">
		<div class="card">
			<div class="card-body">
				<i class="oi oi-book"></i>
				<p class="card-text">タイプ付き単語のみを含んだ、<br>シンプルな辞書です。</p>
			</div>
		</div>
	</div>
</div>
<style>
	.container {
		margin-top: 20px;
		font-family: Arial, Helvetica, sans-serif;
	}

	.card-deck {
		display: flex;
		flex-direction: row;
		justify-content: space-evenly;
		align-items: stretch;
		flex-wrap: wrap;
	}

	.card {
		width: 300px;
		min-height: 250px;
		margin: 10px;
		border-radius: 10px;
		box-shadow: 0 0 10px rgba(0,0,0,0.1);
		transition: 0.3s;
		border-color: transparent;
		margin-top: 30px;
	}

		.card:hover {
			transform: scale(1.05);
			box-shadow: 0 0 20px rgba(0,0,0,0.2);
		}

	.card-body {
		display: flex;
		flex-flow: column;
	}

	.btn {
		align-self: stretch;
		display: flex;
		justify-content: space-between;
		align-content: center;
		gap: 10px;
		height: 80px;
		margin: 10px,0px,10px,0;
		border-radius: 10px;
		box-shadow: inset 0 0 10px rgba(0,0,0,0.1);
		transition: 0.3s;
		border-color: transparent;
		font-weight: bold;
	}
</style>

